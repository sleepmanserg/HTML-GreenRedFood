// Login modal
#loginModal.authorization-modal.greenRedFood-modal.modal.fade(tabindex='-1' aria-labelledby='loginModalLabel' aria-hidden='true')
	.modal-dialog
		.modal-content
			.modal-header
				h5#loginModalLabel.modal-title.text-center.text-strong.text-uppercase.m-0 Войти
				button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
					i.grf-close
			.modal-body
				form#loginForm.authorization-form.authorization-modal__form.needs-validation(novalidate)
					.form-inner.d-flex.jusify-content-between
						.form-input-wrapper
							label.form-label(for='loginEmail') email
							input#loginEmail.form-control.form-input(type='email' required)
							.invalid-feedback Пожалуйста введите email
						.form-input-wrapper
							label.form-label(for='loginPassword') пароль
							input#loginPassword.form-control.form-input(type='password' required)
							.invalid-feedback Пожалуйста введите пароль
					.authorization-form-btns.d-flex.justify-content-between
						button.btn.btn-border.btn-black-border.text-strong.text-uppercase(type='submit') Войти
						button.btn.btn-border.btn-black-border.text-strong.text-uppercase(type='button' data-bs-toggle="modal" data-bs-target="#registerModal" data-bs-dismiss='modal' aria-label='Close') Зарегистрироваться
			.modal-footer.flex-column
				h5.modal-title.text-center.text-strong.text-uppercase.m-0 Войти через соц. сети
				.modal-socials.d-flex.justify-content-center
					a(href="#").btn.btn-grey.btn-icon
						i.grf-facebook
					a(href="#").btn.btn-grey.btn-icon
						i.grf-google
// Login modal  end

// Registration modal
#registerModal.authorization-modal.greenRedFood-modal.modal.fade(tabindex='-1' aria-labelledby='registerModalLabel' aria-hidden='true')
	.modal-dialog
		.modal-content
			.modal-header
				h5#registerModalLabel.modal-title.text-center.text-strong.text-uppercase.m-0 Зарегистрироваться
				button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
					i.grf-close
			.modal-body
				form#registerForm.authorization-form.authorization-modal__form.needs-validation(novalidate)
					.form-inner.d-flex.jusify-content-between
						.form-input-wrapper
							label.form-label(for='registerName') Имя
							input#registerName.form-control.auth-form-input(type='text' required)
							.invalid-feedback Пожалуйста введите имя
						.form-input-wrapper
							label.form-label(for='loginEmail') email
							input#registerEmail.form-control.auth-form-input(type='email' required)
							.invalid-feedback Пожалуйста введите email
					.authorization-form-btns.d-flex.justify-content-between
						button.btn.btn-border.btn-black-border.text-strong.text-uppercase(type='button' data-bs-toggle="modal" data-bs-target="#loginModal" data-bs-dismiss='modal' aria-label='Close') Войти
						button.btn.btn-border.btn-black-border.text-strong.text-uppercase(type='submit') Зарегистрироваться
			.modal-footer.flex-column
				h5.modal-title.text-center.text-strong.text-uppercase.m-0 Регистрация через соц. сети
				.modal-socials.d-flex.justify-content-center
					a(href="#").btn.btn-grey.btn-icon
						i.grf-facebook
					a(href="#").btn.btn-grey.btn-icon
						i.grf-google
// Registration modal end

