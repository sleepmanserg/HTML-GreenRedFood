  include ./partials/stocks
  section.promo.bg-black
    .container-fluid
      .row
        .col-lg-3
          .promo-banner
            .promo-banner__header
              h3.promo-banner__title.text-strong Promo title
            .promo-banner__body
              img(src="./img/promo/01.jpg", alt="")
        .col-lg-3
          .promo-banner
            .promo-banner__header
              h3.promo-banner__title.text-strong Promo title
